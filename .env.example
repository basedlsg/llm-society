# LLM Society - Environment Configuration

# AI Provider API Keys
GOOGLE_API_KEY=your_google_gemini_key_here
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Simulation Configuration
NUM_AGENTS=100
SIMULATION_STEPS=1000
TICK_RATE=1.0

# Economic Settings
INITIAL_WEALTH=1000
MARKET_DYNAMICS_ENABLED=true

# Social Settings
MAX_RELATIONSHIPS=50
CULTURAL_TRANSMISSION_RATE=0.1

# LLM Configuration
DEFAULT_LLM_MODEL=gemini-pro
LLM_TEMPERATURE=0.8
LLM_MAX_TOKENS=1024

# FlameGPU (optional)
FLAMEGPU_ENABLED=false
GPU_DEVICE_ID=0

# Monitoring
WANDB_API_KEY=your_wandb_key_here
WANDB_PROJECT=llm-society
DASHBOARD_ENABLED=true
DASHBOARD_PORT=8501

# Database
DATABASE_PATH=society_state.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/llm-society.log
